    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "echo \"ERROR: No test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "better-sqlite3": "^11.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
